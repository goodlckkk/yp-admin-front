/**
 * Página de Edición de Ensayo
 * Ruta dinámica: /trials/[id]/edit
 * 
 * IMPORTANTE: Esta página requiere SSR para funcionar con rutas dinámicas.
 * Como estamos en modo static, necesitamos pre-generar todas las rutas posibles
 * o cambiar a SSR.
 */

import Layout from '../../../layouts/Layout.astro';
import { TrialEditPage } from '../../../components/trials/TrialEditPage';

// Para modo static, necesitamos generar las rutas en build time
// Pero esto no es práctico para datos dinámicos
// La solución es usar una ruta sin parámetros y leer el ID del query string
export function getStaticPaths() {
  // Retornar fallback: true permitiría generar páginas bajo demanda
  // pero solo funciona en SSR mode
  return [];
}
---

<Layout>
  <TrialEditPage client:only="react" />
</Layout>
